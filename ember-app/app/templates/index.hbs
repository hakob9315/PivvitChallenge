<div class="offers">

  <div class="row">
    <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
      <h1>Offers</h1>
      <table class="table table-hover table-bordered offers-table">
        <thead>
          <tr>
            <th>Title</th>
            <th>Price</th>
          </tr>
        </thead>
        <tbody>
          {{#each model.offers as |offer|}}
            {{#link-to "offer" offer tagName="tr"}}
                <td>{{offer.title}}</td>
                <td>{{offer.price}}</td>
            {{/link-to}}
          {{/each}}
        </tbody>
      </table>
    </div>
    <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
      <h1>Purchases</h1>
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th>Customer Name</th>
            <th>Offering Id</th>
            <th>Quantity</th>
          </tr>
        </thead>
        <tbody>
          {{#each model.purchases as |purchase|}}
            <tr>
              <td>{{purchase.customerName}}</td>
              <td>{{purchase.offeringID}}</td>
              <td>{{purchase.quantity}}</td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>


</div>

{{outlet}}
