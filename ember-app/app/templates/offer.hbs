
<div class="row">
  <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
    <h2>Title: {{model.title}}</h2>
    <h3>
      Price: {{model.price}}
    </h3>
  </div>
  <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
      <div class="form-group">
        <label for="">Count</label>
        {{input type="number" value=purchaseCount class="form-control" placeholder="Type here count of offer."}}
      </div>
      <div class="form-group">
        <label for="">Customer name</label>
        {{input type="text" value=customerName class="form-control" placeholder="Type here customer name."}}
      </div>
      <div class="form-group">
        <button {{action 'buy' model}} type="button" class="btn btn-default">
          Purchase
        </button>
      </div>
  </div>
</div>





